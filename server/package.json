{
  "name": "vice-server",
  "version": "0.0.1",
  "description": "The server-side component for the VICE UIs.",
  "repository": "https://github.com/cyverse-de/interapps-landing",
  "main": "index.js",
  "scripts": {
    "prestart": "npm run build",
    "start": "node -r dotenv/config dist/index.js",
    "dev": "nodemon  src/index.js --exec \"node -r dotenv/config -r babel-register\"",
    "clean": "rimraf dist",
    "build": "npm run clean && mkdir -p dist && babel src -s -D -d dist",
    "test": "jest --watch",
    "lint": "esw -w src test"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 7,
      "sourceType": "module"
    },
    "env": {
      "node": true
    },
    "rules": {
      "no-console": 0,
      "no-unused-vars": 1
    }
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0",
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.5",
    "eslint": "^5.9.0",
    "express": "^4.16.4",
    "morgan": "^1.9.1",
    "pg-promise": "^8.5.3",
    "resource-router-middleware": "^0.7.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "@babel/register": "^7.0.0",
    "dotenv": "^6.1.0",
    "jest": "^23.6.0",
    "nodemon": "^1.18.7",
    "rimraf": "^2.6.2"
  }
}
